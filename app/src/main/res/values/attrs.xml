<?xml version="1.0" encoding="utf-8"?>
<resources>
    <bool name="fitsSystemWindows">true</bool>
    <dimen name="status_bar_height">0dp</dimen>

    <declare-styleable name="BarChart" />

    <declare-styleable name="BaseBarChart">
        <attr name="egShowValues" format="boolean" />
        <attr name="egBarWidth" format="dimension" />
        <attr name="egBarMargin" format="dimension" />
        <attr name="egFixedBarWidth" format="boolean" />
        <attr name="egEnableScroll" format="boolean" />
        <attr name="egVisibleBars" format="integer" />
    </declare-styleable>

    <declare-styleable name="BaseChart">
        <attr name="egAnimationTime" format="integer" />
        <attr name="egLegendColor" format="color" />
        <attr name="egLegendHeight" format="dimension" />
        <attr name="egLegendTextSize" format="dimension" />
        <attr name="egShowDecimal" format="boolean" />
        <attr name="egEmptyDataText" format="string" />
    </declare-styleable>

    <declare-styleable name="PieChart">
        <attr name="egInnerPadding" format="float" />
        <attr name="egInnerPaddingOutline" format="float" />
        <attr name="egUseInnerPadding" format="boolean" />
        <attr name="egHighlightStrength" format="float" />
        <attr name="egUsePieRotation" format="boolean" />
        <attr name="egAutoCenter" format="boolean" />
        <attr name="egDrawValueInPie" format="boolean" />
        <attr name="egValueTextSize" format="dimension" />
        <attr name="egValueTextColor" format="color" />
        <attr name="egUseCustomInnerValue" format="boolean" />
        <attr name="egOpenClockwise" format="boolean" />
        <attr name="egInnerPaddingColor" format="color" />
        <attr name="egInnerValueUnit" format="string" />
    </declare-styleable>

    <declare-styleable name="StackedBarChart">
        <attr name="egBarTextSize" format="dimension" />
        <attr name="egShowSeparators" format="boolean" />
        <attr name="egSeparatorWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ValueLineChart">
        <attr name="egCurveSmoothness" format="float" />
        <attr name="egUseCubic" format="boolean" />
        <attr name="egUseOverlapFill" format="boolean" />
        <attr name="egLineStroke" format="dimension" />
        <attr name="egShowValueIndicator" format="boolean" />
        <attr name="egIndicatorWidth" format="dimension" />
        <attr name="egIndicatorLineColor" format="color" />
        <attr name="egIndicatorTextColor" format="color" />
        <attr name="egIndicatorTextSize" format="dimension" />
        <attr name="egIndicatorLeftPadding" format="dimension" />
        <attr name="egIndicatorTopPadding" format="dimension" />
        <attr name="egShowStandardValue" format="boolean" />
        <attr name="egXAxisStroke" format="dimension" />
        <attr name="egActivateIndicatorShadow" format="boolean" />
        <attr name="egIndicatorShadowStrength" format="dimension" />
        <attr name="egIndicatorShadowColor" format="color" />
        <attr name="egIndicatorTextUnit" format="string" />
        <attr name="egShowLegendBeneathIndicator" format="boolean" />
        <attr name="egUseDynamicScaling" format="boolean" />
        <attr name="egScalingFactor" format="float" />
        <attr name="egMaxXZoom" format="float" />
        <attr name="egMaxYZoom" format="float" />
    </declare-styleable>

    <declare-styleable name="VerticalBarChart">
        <attr name="egUseMaximumValue" format="boolean" />
        <attr name="egMaximumValue" format="float" />
        <attr name="egValueUnit" format="string" />
        <attr name="egShowBarLabel" format="boolean" />
        <attr name="egBarLabelColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SwipeLayout">
        <attr name="drag_edge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>
        <attr name="leftEdgeSwipeOffset" format="dimension" />
        <attr name="rightEdgeSwipeOffset" format="dimension" />
        <attr name="topEdgeSwipeOffset" format="dimension" />
        <attr name="bottomEdgeSwipeOffset" format="dimension" />
        <attr name="show_mode" format="enum">
            <enum name="lay_down" value="0" />
            <enum name="pull_out" value="1" />
        </attr>
        <attr name="clickToClose" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AppView">
        <attr name="appview_nodeSrc" format="color|reference" />
        <attr name="appview_nodeOnSrc" format="color|reference" />
        <attr name="appview_nodeSize" format="dimension" />
        <attr name="appview_nodeAreaExpand" format="dimension" />
        <attr name="appview_nodeOnAnim" format="reference" />
        <attr name="appview_lineColor" format="color" />
        <attr name="appview_lineWidth" format="dimension" />
        <attr name="appview_padding" format="dimension" />
        <attr name="appview_spacing" format="dimension" />
        <attr name="appview_autoLink" format="boolean" />
        <attr name="appview_enableVibrate" format="boolean" />
        <attr name="appview_vibrateTime" format="integer" />
    </declare-styleable>

    <declare-styleable name="Gauge">
        <attr name="gaugeProgress" format="integer" />
        <attr name="gaugeMax" format="integer" />
        <attr name="gaugeUnfinishedColor" format="color" />
        <attr name="gaugeFinishedColor" format="color" />
        <attr name="gaugeTextSize" format="dimension" />
        <attr name="gaugeTextColor" format="color" />
        <attr name="gaugePrefixText" format="string" />
        <attr name="gaugeSuffixText" format="string" />
    </declare-styleable>

    <declare-styleable name="Themes">
        <attr name="gaugeStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="TextView">
        <attr name="font" format="string" />
    </declare-styleable>

    <declare-styleable name="CheckedTextView">
        <attr name="fonts" format="string" />
    </declare-styleable>

    <declare-styleable name="EditText">
        <attr name="enable_default_hint" format="boolean"/>
        <attr name="allow_negative_values" format="boolean" />
    </declare-styleable>

    <declare-styleable name="Money">
        <attr name="format" format="string"/>
        <attr name="symbol" format="string"/>
        <attr name="amount" format="float"/>
        <attr name="symbolMargin" format="dimension"/>
        <attr name="decimalMargin" format="dimension"/>
        <attr name="decimalSeparator" format="string"/>

        <attr name="baseTextSize" format="dimension"/>
        <attr name="symbolTextSize" format="dimension"/>
        <attr name="decimalDigitsTextSize" format="dimension"/>

        <attr name="symbolGravity">
            <flag name="start" value="0x01"/>
            <flag name="end" value="0x02"/>
            <flag name="top" value="0x04"/>
            <flag name="bottom" value="0x08"/>
        </attr>

        <attr name="decimalGravity" format="enum">
            <enum name="top" value="4"/>
            <enum name="bottom" value="8"/>
        </attr>

        <attr name="gravity">
            <enum name="left" value="0x01"/>
            <enum name="right" value="0x02"/>
            <enum name="top" value="0x04"/>
            <enum name="bottom" value="0x08"/>
            <enum name="centerVertical" value="0x16"/>
            <enum name="centerHorizontal" value="0x32"/>
            <enum name="center" value="0x48"/>
        </attr>

        <attr name="baseTextColor" format="color"/>
        <attr name="symbolTextColor" format="color"/>
        <attr name="decimalTextColor" format="color"/>

        <attr name="includeDecimalSeparator" format="boolean"/>
        <attr name="decimalUnderline" format="boolean"/>
        <attr name="fontPath" format="string"/>
    </declare-styleable>

</resources>