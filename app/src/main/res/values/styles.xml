<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme">

    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary" tools:ignore="PrivateResource">
            @color/abc_primary_text_material_dark
        </item>
        <item name="android:textColorPrimaryInverse" tools:ignore="PrivateResource">
            @color/abc_primary_text_material_light
        </item>
        <item name="android:textColorSecondary" tools:ignore="PrivateResource">
            @color/abc_primary_text_material_dark
        </item>
        <item name="actionMenuTextColor">@android:color/holo_green_light</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="SplashTheme" parent="Base.AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="StyleEditText" parent="Widget.AppCompat.EditText">
        <item name="android:ems">10</item>
        <item name="android:padding">6dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:typeface">serif</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="StyleTextView">
        <item name="android:ems">10</item>
        <item name="android:typeface">serif</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@color/accentColor</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner.Underlined" />

    <style name="ExpandedAppbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
